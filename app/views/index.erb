<h1>All my sweet, sweet SKILLZ</h1>

<% @skills.each do |skill| %>
  <h3><%= skill.id %>: <a href="/skills/<%= skill.id %>"><%= skill.title %></a></h3>
  <a href="/skills/<%= skill.id %>/edit">Edit this sweet skill to be better!</a>
  <form class="" action="skills/<%= skill.id %>.html" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
<% end %>
