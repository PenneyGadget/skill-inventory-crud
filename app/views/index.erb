<h1>All my sweet, sweet SKILLZ</h1>

<% @skills.each do |skill| %>
  <div id="skillz">
    <h3><a href="/skills/<%= skill.id %>"><%= skill.title %></a></h3>
    <a id="edit" href="/skills/<%= skill.id %>/edit">(Edit this sweet skill to be better!)</a>
    <form class="" action="skills/<%= skill.id %>.html" method="post">
      <input type="hidden" name="_method" value="delete">
      <input id="delete" type="submit" class="btn btn-link" value="(Delete this dumbass skill)">
    </form>
  </div><br/>
<% end %>
